{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/",
    "esModuleInterop": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "pretty": true,
    "removeComments": false,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2018"
  },
  "include": ["src/**/*"],
  "typedocOptions": {
    "plugin": "typedoc-plugin-markdown",
    "exclude": ["**/*.test.ts"],
    "out": "docs/typedoc",
    "disableSources": true,
    "theme": "markdown",
    "readme": "none"
  }
}
